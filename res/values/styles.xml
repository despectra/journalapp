<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/gray250</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextColor">@color/menu_text</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>
    
    <style name="CustomActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/profile</item>
        <item name="android:height">70dp</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="android:subtitleTextStyle">@style/CustomActionBarSubtitle</item>
    </style>
    
    <style name="CustomActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="CustomActionBarSubtitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#505050</item>
    </style>

</resources>
