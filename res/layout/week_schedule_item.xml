<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:minHeight="100dp"
    android:paddingTop="30dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/schedule_item_background_selector"
    android:focusable="true"
    android:clickable="true" >

    <TextView
        android:id="@+id/schedule_item_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/gray250"
        android:text="Информатика и ИКТ"
        android:fontFamily="sans-serif"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/schedule_item_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/gray250"
        android:text="Класс 9 'A'"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingTop="30dp"
        android:layout_below="@id/schedule_item_subject"
        />

</RelativeLayout>